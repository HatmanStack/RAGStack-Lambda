{
  "name": "@ragstack/amplify-chat",
  "version": "1.0.0",
  "description": "Reusable React component for AI chat with source attribution using AWS Amplify AI Kit and Bedrock",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.esm.js",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./wc": {
      "types": "./dist/wc.d.ts",
      "import": "./dist/wc.esm.js",
      "require": "./dist/wc.js",
      "default": "./dist/wc.js"
    }
  },
  "scripts": {
    "build": "tsc && npm run build:wc",
    "build:wc": "vite build --config vite.wc.config.ts",
    "build:watch": "tsc --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "amplify",
    "bedrock",
    "chat",
    "ai",
    "react",
    "component",
    "rag",
    "source-attribution",
    "knowledge-base"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "@aws-amplify/ui-react-ai": "^1.0.0",
    "aws-amplify": "^6.0.0"
  },
  "peerDependenciesMeta": {
    "@aws-amplify/ui-react-ai": {
      "optional": false
    },
    "aws-amplify": {
      "optional": false
    }
  },
  "devDependencies": {
    "@aws-amplify/ui-react-ai": "^1.0.0",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^0.34.0",
    "eslint": "^8.50.0",
    "happy-dom": "^12.9.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^0.34.0"
  },
  "dependencies": {
    "aws-amplify": "^6.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/RAGStack-Lambda.git",
    "directory": "src/amplify-chat"
  },
  "bugs": {
    "url": "https://github.com/your-org/RAGStack-Lambda/issues"
  },
  "homepage": "https://github.com/your-org/RAGStack-Lambda/tree/main/src/amplify-chat#readme"
}
